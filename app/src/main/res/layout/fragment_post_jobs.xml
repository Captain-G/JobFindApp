<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PostJobsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:padding="15dp"
       >


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="JOB TYPE"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_jobtype"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="14sp"
            android:textColorHint="#606060"
            android:inputType="text"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="OFFERED BY"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_offered_by"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="14sp"
            android:textColorHint="#606060"
            android:inputType="text"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="PHONE NUMBER"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="14sp"
            android:textColorHint="#606060"
            android:inputType="text"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="REQUIREMENTS"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_requirements"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="14sp"
            android:textColorHint="#606060"
            android:inputType="text"
            />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ESTIMATED PAY"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_money"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="14sp"
            android:textColorHint="#606060"
            android:inputType="text"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="LOCATION"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="14sp"
            android:textColorHint="#606060"
            android:inputType="text"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SLOTS AVAILABLE"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_slotsavailable"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="14sp"
            android:textColorHint="#606060"
            android:inputType="text"
            />



        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/signin"
            android:src="@drawable/ic_forward_black_24dp"
            android:background="@drawable/background_post"/>



    </LinearLayout>
</FrameLayout>